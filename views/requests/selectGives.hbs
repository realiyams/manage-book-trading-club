<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Select Books To Give</title>
  <link href="/css/styles.css" rel="stylesheet">
  <link rel="stylesheet" href="/fontawesome-free-6.5.2-web/css/all.min.css">
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <!-- Include DaisyUI for additional components -->
  <link href="https://cdn.jsdelivr.net/npm/daisyui@1.11.4/dist/full.css" rel="stylesheet">

  <style>
    /* Responsive styles */
    @media (max-width: 640px) {
      #main {
        height: auto;
      }
    }
  </style>
</head>

<body class="w-full">
  {{>upperPart }}

  <div id="main" class="flex flex-col items-center justify-center p-5">
    <div class="card !static bg-cyan-700 shadow-xl w-full sm:w-4/5 lg:w-3/5">
      <div class="card-body p-6 lg:p-8">
        <form id="giveBookForm" class="w-full">
          <h2 class="text-2xl font-bold text-center mb-6 text-white">
            <i class="fas fa-book"></i> Select Books To Give
          </h2>

          <div class="w-full overflow-x-auto mb-4">
            <h3 class="text-lg font-semibold text-white mb-4">Your Books to Give</h3>

            <table class="table w-full bg-gray-700 text-white">
              <thead class="bg-gray-800">
                <tr>
                  <th></th>
                  <th class="hidden sm:table-cell"></th>
                  <th>Book Title</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
                {{#each books}}
                <tr class="hover:bg-gray-600">
                  <td>
                    <label class="cursor-pointer">
                      <input type="checkbox" name="selectedGiveBooks[]" value="{{this.id}}" data-title="{{this.title}}"
                        data-description="{{this.description}}" class="checkbox checkbox-primary mr-2">
                    </label>
                  </td>
                  <td class="hidden sm:table-cell">
                    <i class="fas fa-book book-item-icon text-2xl"></i>
                  </td>
                  <td class="font-medium">
                    {{this.title}} by {{../user.username}}
                  </td>
                  <td>{{this.description}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>

          <!-- Button submit yang ada di tengah -->
          <button type="submit"
            class="btn btn-success w-full sm:w-2/5 mt-4 text-white font-semibold rounded-lg mx-auto block">
            Submit Selected Books to Give
          </button>
        </form>
      </div>
    </div>
  </div>

  <script>
    // Load selected books from localStorage
    function loadSelectedGiveBooks() {
      const selectedGiveBooks = JSON.parse(localStorage.getItem('selectedBooksToGive')) || [];
      selectedGiveBooks.forEach(book => {
        const checkbox = document.querySelector(`input[name="selectedGiveBooks[]"][value="${book.id}"]`);
        if (checkbox) {
          checkbox.checked = true;
        }
      });
    }

    document.addEventListener('DOMContentLoaded', function () {
      loadSelectedGiveBooks();
    });

    document.getElementById('giveBookForm').addEventListener('submit', function (event) {
      event.preventDefault(); // Prevent default form submission
      const selectedGiveBooks = [];
      document.querySelectorAll('input[name="selectedGiveBooks[]"]:checked').forEach(checkbox => {
        selectedGiveBooks.push({
          id: checkbox.value,
          title: checkbox.getAttribute('data-title'),
          description: checkbox.getAttribute('data-description')
        });
      });
      localStorage.setItem('selectedBooksToGive', JSON.stringify(selectedGiveBooks));
      window.location.href = '/create-request'; // Redirect after form submission
    });
  </script>
  {{>belowPart }}
</body>

</html>
