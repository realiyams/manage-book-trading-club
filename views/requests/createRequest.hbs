<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Trade Request</title>
  <link href="/css/styles.css" rel="stylesheet">
  <link rel="stylesheet" href="/fontawesome-free-6.5.2-web/css/all.min.css">
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <!-- Include DaisyUI for additional components -->
  <link href="https://cdn.jsdelivr.net/npm/daisyui@1.11.4/dist/full.css" rel="stylesheet">

  <style>
    #main {
      height: calc(100vh - 10rem);
    }

    .book-section {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .book-list {
      flex-grow: 1;
      min-height: 10rem;
      max-height: 11rem;
      overflow-y: auto;
      margin-top: 1rem;
      border: 1px solid #000000;
      padding: 1rem;
      border-radius: 0.2rem;
    }

    .book-list p {
      color: #374151;
    }

    .book-item {
      background-color: #e5e7eb;
      padding: 0.75rem;
      border-radius: 0.375rem;
      margin-bottom: 0.5rem;
      border-left: 5px solid #4ade80;
      /* Green highlight for each book item */
      display: flex;
      align-items: center;
    }

    .book-item i {
      margin-right: 10px;
      color: #1f2937;
    }

    .book-details {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .book-details p {
      margin: 0;
      line-height: 1.5;
    }

    .book-details p strong {
      font-weight: 600;
      color: #111827;
    }

    .card-actions {
      margin-top: 1rem;
    }

    @media (max-width: 1024px) {
      .lg\\:flex-row {
        flex-direction: column !important;
      }
    }
  </style>
</head>

<body class="w-full">
  {{>upperPart }}

  <div id="main" class="flex justify-center items-center flex-col mx-5 my-5 lg:mx-auto lg:mt-10 lg:mb-0">
    <div class="card !static bg-cyan-700 shadow-xl w-full sm:w-4/5 lg:h-auto lg:w-3/5 pb-3 lg:pb-0 mt-72 sm:mt-0">
      <div class="card-body p-4 lg:p-8 flex flex-col items-center w-full lg:justify-start lg:h-full lg:pl-8">
        <div class="mb-2 lg:mb-0 w-full flex justify-center flex-col">
          <h2 class="card-title text-white font-extrabold text-2xl justify-center mb-4 mt-2">
            <i class="fas fa-exchange-alt"></i> Create Trade Request
          </h2>
          <div class="divider divider-info m-0 w-full"></div>
        </div>

        <form action="/submit-trade-request" method="POST" id="tradeRequestForm"
          class="w-full flex flex-col justify-center">
          <div class="flex flex-col lg:flex-row justify-center items-start w-full px-1">
            <!-- Section for displaying selected books to give -->
            <div class="book-section mx-0 sm:mx-4 w-full">
              <h3 class="text-white font-medium"><i class="fas fa-book"></i> Books to Give:</h3>
              <a href="/book/select-gives" type="button" class="btn btn-outline btn-warning mt-2">
                <i class="fas fa-plus"></i> Add Book to Give
              </a>
              <div id="booksToGive" class="book-list bg-gray-800">
                <!-- List of books will go here -->
              </div>
            </div>

            <div class="book-section mx-0 sm:mx-4 mt-2 sm:mt-0 w-full">
              <h3 class="text-white font-medium"><i class="fas fa-book"></i> Books to Take:</h3>
              <a href="/book/select-takes" type="button" class="btn btn-outline btn-warning mt-2">
                <i class="fas fa-plus"></i> Add Book to Take
              </a>
              <div id="booksToTake" class="book-list bg-gray-800">
                <!-- List of books will go here -->
              </div>
            </div>
          </div>

          <!-- Submit button inside the card -->
          <div class="card-actions flex justify-center items-center w-full">
            <button id="submitRequestButton" type="submit"
              class="w-4/5 sm:w-2/5 btn bg-green-950 h-10 text-white font-extrabold py-2 px-8 glass">
              <i class="fas fa-paper-plane"></i> Submit Trade Request
            </button>
          </div>

          <!-- Hidden fields to hold the selected books data -->
          <input type="hidden" name="booksToGive" id="hiddenBooksToGive">
          <input type="hidden" name="booksToTake" id="hiddenBooksToTake">
        </form>
      </div>
    </div>
  </div>

  <!-- Script to load selected books from localStorage and display them -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Get selected books to give from localStorage
      const booksToGive = JSON.parse(localStorage.getItem('selectedBooksToGive') || '[]');
      const booksToGiveContainer = document.getElementById('booksToGive');

      booksToGive.forEach(book => {
        const bookElement = document.createElement('div');
        bookElement.classList.add('book-item');
        bookElement.innerHTML = `
          <i class="fas fa-book"></i>
          <div class="book-details">
            <p><strong>Title:</strong> ${book.title}</p>
            <p><strong>Description:</strong> ${book.description}</p>
          </div>
        `;
        booksToGiveContainer.appendChild(bookElement);
      });

      // Get the selected books to take from localStorage
      const booksToTake = JSON.parse(localStorage.getItem('selectedBooksToTake') || '[]');
      const booksToTakeContainer = document.getElementById('booksToTake');

      booksToTake.forEach(book => {
        const bookElement = document.createElement('div');
        bookElement.classList.add('book-item');
        bookElement.innerHTML = `
          <i class="fas fa-book-reader"></i>
          <div class="book-details">
            <p><strong>Title:</strong> ${book.title}</p>
            <p><strong>Description:</strong> ${book.description}</p>
            <p><strong>Giver:</strong> ${book.giver.username}, ${book.giver.city}, ${book.giver.state}</p>
          </div>
        `;
        booksToTakeContainer.appendChild(bookElement);
      });

      // Populate hidden fields with the JSON data for books to give and take
      document.getElementById('hiddenBooksToGive').value = JSON.stringify(booksToGive);
      document.getElementById('hiddenBooksToTake').value = JSON.stringify(booksToTake);

      // Handle form submission
      document.getElementById('tradeRequestForm').addEventListener('submit', function (event) {
        // Clear localStorage for the selected books
        localStorage.removeItem('selectedBooksToGive');
        localStorage.removeItem('selectedBooksToTake');

        console.log('LocalStorage cleared');
      });
    });
  </script>

  {{>belowPart }}
</body>

</html>