  <div id="main" class="flex justify-center items-center flex-col mx-5 my-5 lg:mx-auto lg:mt-10 lg:mb-0">
    <div class="card !static bg-cyan-700 shadow-xl w-full sm:w-4/5 lg:h-auto lg:w-1/2 pb-3 lg:pb-0">

      <div class="card-body p-4 lg:p-8 flex flex-col items-center w-full lg:justify-start lg:h-full lg:pl-8">
        <div class="mb-2 lg:mb-0 w-full flex justify-center flex-col">
          <h2 class="card-title text-white font-extrabold text-2xl justify-center mb-4 mt-2">
            Create Trade Request
          </h2>
          <div class="divider divider-info m-0 w-full"></div>
        </div>

        <div class="flex flex-col lg:flex-row justify-center items-center w-full px-1 h-full">
          <div class="book-section">
            <h3 class="text-white font-medium">Books to Give:</h3>
            <div id="booksToGive">
              <a href="/book/select-gives" type="button" class="btn btn-outline btn-warning mt-2" onclick="addBookToGive()">Add Book to Give</a>
            </div>
          </div>

          <div class="book-section">
            <h3 class="text-white font-medium">Books to Take:</h3>
            <div id="booksToTake">
              <a href="/book/select-takes" type="button" class="btn btn-outline btn-warning mt-2" onclick="addBookToTake()">Add Book to Take</a>
            </div>
          </div>
        </div>

        <div class="flex justify-center items-center w-full">
          <div class="card-actions mt-4">
            <button id="submitRequestButton" class="w-full btn bg-green-950 h-10 text-white font-extrabold py-2 px-8 glass">Submit Trade Request</button>
          </div>
        </div>

      </div>

    </div>
  </div>

