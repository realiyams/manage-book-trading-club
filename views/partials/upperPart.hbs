<!-- Drawer -->
<div class="drawer">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <!-- Navbar -->
    <nav class="navbar bg-gray-900 glass p-0.5 lg:p-3 sticky top-0" id="navbar-sticky">
      <div class="container mx-auto flex justify-end lg:justify-between items-center">
        <div class="lg:hidden">
          <label for="my-drawer" class="drawer-button text-white btn btn-info glass bg-cyan-500 px-3 h-14">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </label>
        </div>
        <!-- Logo dan Judul -->
        <a href="/books"
          class="hidden lg:block text-white font-bold text-lg px-4 py-2 btn btn-info glass bg-cyan-600 w-48">
          <i class="fa-solid fa-book-open fa-lg mr-1"></i>Book Exchange
        </a>

        <!-- Menu -->
        <ul class="hidden lg:flex space-x-4">
          <!-- Books -->
          <li>
            <a href="/books" class="text-white btn btn-info glass bg-cyan-600 w-24">Books</a>
          </li>

          <!-- Request Dropdown -->
          <li onmouseover="Z_IndexChange()" onmouseleave="Z_IndexDefault()">
            <div class="dropdown dropdown-end dropdown-hover">
              <div tabindex="0" role="button" class="text-white btn btn-info glass bg-cyan-600 w-24">Request</div>
              <ul tabindex="0"
                class="dropdown-content menu right-0 origin-top-right w-40 bg-white border border-gray-200 shadow-md rounded-md">
                <li><a href="/requests" class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
                    ontouchstart="touchstart(event)">All Request</a>
                </li>
                {{#if isAuthenticated}}
                <li><a href="/create-request" class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
                    ontouchstart="touchstart(event)">Create
                    Request</a>
                </li>
                <li><a href="/respond-request" class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center"
                    ontouchstart="touchstart(event)">Respond
                    Request</a>
                </li>
                {{/if}}
              </ul>
            </div>
          </li>

          <!-- Trades -->
          <li>
            <a href="/trades" class="text-white btn btn-info glass bg-cyan-600 w-24">Trades</a>
          </li>

          <!-- Users -->
          <li>
            <a href="/users" class="text-white btn btn-info glass bg-cyan-600 w-24">Users</a>
          </li>

          <div class="divider divider-info divider-horizontal"></div>

          <!-- Login / Nama User -->
          {{#if isAuthenticated}}
          <li onmouseover="Z_IndexChange()" onmouseleave="Z_IndexDefault()">
            <div class="dropdown dropdown-end dropdown-hover">
              <div tabindex="0" role="button" class="text-white btn btn-info glass bg-cyan-600">
                {{user.username}}
              </div>
              <ul tabindex="0"
                class="dropdown-content z-[1] menu right-0 origin-top-right w-40 bg-white border border-gray-200 shadow-md rounded-md">
                <li><a href="/profile" class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center">Profile</a>
                </li>
                <li><a href="/edit-profile" class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center">Edit
                    Profile</a></li>
                <li><a href="/my-books" class="block px-4 py-2 text-gray-800 hover:bg-gray-200 text-center">My Books</a>
                </li>
                <li><a href="/logout"
                    class="block px-4 py-2 text-white bg-red-500 hover:bg-red-400 text-center">Logout</a>
                </li>
              </ul>
            </div>
          </li>

          {{else}}
          <li>
            <a href="/login" class="text-white btn btn-info glass bg-cyan-600 w-24">Login</a>
          </li>
          {{/if}}
        </ul>
      </div>
    </nav>

    <!-- start content -->